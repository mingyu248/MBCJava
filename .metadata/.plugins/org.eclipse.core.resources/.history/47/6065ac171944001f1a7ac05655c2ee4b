package test_0717;

public class ㄴㅇㅁㄴㅇㅀ {
  public static void main(String[] args) {
    
    // 변수 선언 1 
//    int 국어;
//    int 영어;
//    int 수학;
    
//    변수 선언 2
//    int 국어, 영어, 수학;
    
    // 변수 선언 3 byte 로 선언
    byte 국어;
    byte 영어;
    byte 수학;
    
    byte 합계;
    
//    합계 = 국어;    // 값이 들어가지 않아서 에러가 뜬다(Unresolved compilation problems: The local variable 국어 may not have been initialized)
    
    // 초기화
    국어 = 100;
    영어 = 90;
    수학 = 80;
    
//     합계 = 국어 + 영어 + 수학;         // 계산은 int 로 돼서 byte 합계에 들어갈 수 없음
                                      // (Unresolved compilation problem: Type mismatch: cannot convert from int to byte)
    
    합계 = (byte)(국어 + 영어 + 수학);    // 오버플로우 발생 127 다음 -128 로 간다 ... -> 이 현상에 의해서 14 라는 값이 나온다
    
    System.out.println("합계 : " + 합계);
    System.out.println("byte 의 최댓값은 " + Byte.MAX_VALUE + " 이다. 이 값을 넘으면 오버플로우가 발생한다. 값이 넘으면"
                        + "" + Byte.MIN_VALUE + " 로 돌아가서 다시 시작한다");
    
    System.out.println();
    System.out.println("short 의 최댓값은 " + Short.MAX_VALUE + " 이다");
    
    short 합계2 = (short)(국어 + 영어 + 수학);
    System.out.println("합계2 : " + 합계2);
    
    float 평균 = (float)합계2/3;
    System.out.println("평균 : " + 평균);
    
    
    byte 국어2 = 100;
    byte 영어2 = 95;
    byte 수학2 = 80;
    
    float 평균2 = (float)(국어2 + 영어2 + 수학2)/3;       // 계산 결과 91.6666666666666666666666...
    System.out.println("평균2 : " + 평균2);             // 출력 결과 91.666664
    
    double 평균3 = (double)(국어2 + 영어2 + 수학2)/3;     // 계산 결과 91.6666666666666666666666...
    System.out.println("평균3 : " + 평균3);             // 출력 결과 91.66666666666667
    
    double 평균4 = (국어2 + 영어2 + 수학2)/3.0;           // 계산 결과 91.6666666666666666666666...
    System.out.println("평균4 : " + 평균4);             // 출력 결과 91.66666666666667
    
    System.out.println(Float.MAX_EXPONENT);
  }
}
