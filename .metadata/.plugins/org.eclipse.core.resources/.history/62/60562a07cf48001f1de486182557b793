package work;

import java.util.Scanner;

public class Input4 {
  
  public static void main(String[] args) {
    
    // 국/영/수 점수 입력 : 100 80 90
    System.out.print("점수 입력 : ");
    
    // 스캐너 객체 생성
    Scanner scanner = new Scanner(System.in);
    
    // 문자열 입력받기
    int score = scanner.nextInt();
    

    System.out.println("점수 : " + score);

    scanner.close();
    
  }
}
