package work;

public class Input2 {
  
  // run configuration 에서 argument 에 ${string_prompt} 으로 설정해준다
  // 인자는 띄어쓰기로 구분한다
  public static void main(String[] args) {
    
    boolean isNumeric = true;
    String number = "123";
    for(int i = 0; i < number.length(); i++) {
     
    }
    
    
    String MaxValue = String.valueOf(Integer.MAX_VALUE);
    for (String str : args) {
      if (str.length() >= 10) {
        // 문자열을 숫자처럼 계산 A.compareTo(B) => A - B 를 int 형을 반환
        if(MaxValue.compareTo(str) < 0) {
          System.out.println((MaxValue + " 이하의 숫자만 입력하세요"));
        } else {
          System.out.println("인자는 숫자만 입력하세요 (NumberFormatException)");
        }
      }
    }
    
    try {
      
      
      int kor = Integer.parseInt(args[0]);
      int eng = Integer.parseInt(args[1]);
      int math = Integer.parseInt(args[2]);
      
      
      System.out.println("국어 => " + kor);
      System.out.println("영어 => " + eng);
      System.out.println("수학 => " + math);
      
      
      
    } catch (NumberFormatException e) {
      
      
      System.out.println("인자는 숫자만 입력하세요 (NumberFormatException)");
      
      
      
    } catch (ArrayIndexOutOfBoundsException e) {
      
      System.out.println("값을 모두 입력하세요 (ArrayIndexOutOfBoundsException)");
      
    } catch (Exception e) {
      
      System.out.println(e.getMessage());
      
    }
    
    
    
  }
}
