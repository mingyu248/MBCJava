package test_0718;

public class ThreadTest2 {
  
  
  
  public static void main(String[] args) {
    
    Thread thread4 = new Thread() {
      
      @Override
      public void run() {
        for (int i = 0; i < 100; i++) {
          System.out.print("4");
        }
      }
    };
    
    Thread1 thread1 = new Thread1();
    Thread2 thread2 = new Thread2();
    Thread3 thread3 = new Thread3();
 
    // 기본형 실행
    thread1.start();
    thread2.start();
    thread3.start();
    
    // 내부 클래스로 실행
    thread4.start();
    
  }
  
}

class Thread1 extends Thread {
  
  @Override
  public void run() {
    for (int i = 0; i < 100; i++) {
      System.out.print("1");
    }
  }
}

class Thread2 extends Thread {
  
  @Override
  public void run() {
    for (int i = 0; i < 100; i++) {
      System.out.print("2");
    }
  }
}

class Thread3 extends Thread {
  
  // Thread 클래스의 run 메소드를 오버라이딩 해서 사용한다.
  @Override
  public void run() {
    for (int i = 0; i < 10; i++) {
      System.out.print("3");
    }
  }
}